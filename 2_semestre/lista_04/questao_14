tipos
    PNo = ponteiro para TNo
    TNo = registro
        num: real
        prox: PNo
    fim registro
var
    função Juntar_2_Elementos(ref l: PNo, p: inteiro): lógico
    var
        função  Verifica_posição_P(ref l: PNo, x: inteiro): lógico
        inicio
            se l = NULO e l^prox = NULO entao   
                retorne FALSO
            fim se
            se x = p entao
                l^num <- l^num + l^prox^num
                lixo <- l^prox
                l^prox <- l^prox^prox
                desaloca(lixo)
                retorne VERDADEIRO
            fim se
            retorne Verifica_posição_P(l^prox, x + 1)
        fim função
    inicio
        retorne Verifica_posição_P(l, 1)
    fim função

