função Insere_Ordenado(nome: string, valor: inteiro): lógico
var 
    f1, f2: sequencia de inteiro
    num: inteiro
inicio
    se nao abre(f1, nome) entao
        retorne FALSO
    fim se
    cria("Seq_temp")
    se nao abre(f2, "Seq_temp") entao
        fecha(f1)
        retorne FALSO
    fim se
    enquanto nao fds(f1) faça
        leia(f1, num)
        se num > valor entao
            escreva(f2, valor)
            valor <- num
        senao
            escreva(f2, num)
        fim se
    fim enquanto
    escreva(f2, valor)
    fecha(f1)
    fecha(f2)
    apaga(nome)
    renomeia("Seq_temp", nome)
    retorne VERDADEIRO
fim função