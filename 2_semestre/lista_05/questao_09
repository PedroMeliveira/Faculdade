procedimento Junta_Seq(nome1, nome2, nome3: string)
var
    f1, f2, f3, f4: sequencia de inteiro
    num1, num2, aux: inteiro
    acabou1, acabou2: l√≥gico
    procedimento Atualiza(ref f: sequencia de real, ref num: real, ref acabou: logico)
    inicio
        se nao fds(f) entao
            leia(f, num)
            acabou <- FALSO
        senao
            acabou <- VERDADEIRO
        fimse
    fimprocedimento

inicio
    se abre(f1, nome1) entao
        se abre(f2, nome2) entao
            se abre(f3, nome3) entao
                Atualiza(f1, num1, acabou1)
                Atualiza(f2, num2, acabou2)
                enquanto nao acabou1 ou nao acabou2 faca
                    se acabou1 ou (nao acabou2 e num1 > num2) entao
                        escreva(f3, num2)
                        Atualiza(f2, num2, acabou2)
                    senao
                        escreva(f3, num1)
                        Atualiza(f1, num1, acabou1)
                    fim se
                fim enquanto
                fecha(f3)
            fim se
            fecha(f2)
        fim se
        fecha(f1)
    fim se
fim procedimento


